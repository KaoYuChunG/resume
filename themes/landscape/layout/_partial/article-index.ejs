<%
    var cssClass = ((index + 1) %2)? '6u' : '6u$';
%>
<article class="<%- cssClass -%> 12u$(xsmall) work-item">
  <a href="<%- item.cover_detail || theme.default_cover_detail %>" >
    <div class="w3-panel w3-card-2">
      <h3><%- item.title || theme.default_post_title || "Untitled" %></h3>
      <p><%- item.cargo || theme.default_post_title || "Untitled" %></p>
      <p><%- item.period || theme.default_post_title || "Untitled" %></p>
      <p><%- item.content %></p>
    </div>
  </a>
  <p><%- item.subtitle || "" %></p>
</article>
